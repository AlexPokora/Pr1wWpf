<Window x:Class="Pr1wWpf.VideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pr1wWpf"
        mc:Ignorable="d"
        Title="VideoWindow" Height="454" Width="729.462">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="7*" />
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Stretch"  >
            <MediaElement x:Name="mediaElement" HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Stretch" LoadedBehavior="Manual" UnloadedBehavior="Stop" Source="/resour/nonon.mp4" /> 
        </Grid>
        <Grid HorizontalAlignment="Stretch" Margin="10" Grid.Row="1" VerticalAlignment="Stretch" Background="White" >
            <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="168,34,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        </Grid>

    </Grid>
</Window>
